{% extends 'base.html.twig' %}

{% block title %}TODO list{% endblock %}

{% block body %}
    <h1>Things you need to do</h1>
    <ul class="todo-list">
        {% for todoItem in todoItems %}
            <li class="row">
                <div class="col-md-8">
                    {{ todoItem.reminderText }}
                </div>
                <div class="col-md-4">
                    <a href="{{ path('editTodoItem') }}"><i class="glyphicon glyphicon-edit"></i></a>
                    <i class="glyphicon glyphicon-remove"></i>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
