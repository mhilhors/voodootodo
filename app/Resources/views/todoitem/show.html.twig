{% extends 'base.html.twig' %}

{% block body %}
    <h1>TodoItem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todoItem.id }}</td>
            </tr>
            <tr>
                <th>Remindertext</th>
                <td>{{ todoItem.reminderText }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todoitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todoitem_edit', { 'id': todoItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
