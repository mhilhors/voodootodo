{% extends 'base.html.twig' %}

{% block body %}
    <h1>Things to do</h1>

    <ul class="todo-list">
    {% for todoItem in todoItems %}
        <li class="todo-item row">
            <div class="todo-item-reminder-text col-md-9">
                {{ todoItem.reminderText }}
            </div>
            <div class="todo-item-actions col-md-3">
                <ul>
                    <li>
                        <a href="{{ path('todoitem_edit', { 'id': todoItem.id }) }}"><i class="glyphicon glyphicon-edit"></i></a>
                    </li>
                    <li>
                        {{ form_start(delete_forms[todoItem.id]) }}
                            <button class="btn btn-link btn-xs" type="submit">
                                <i class="glyphicon glyphicon-remove"></i>
                            </button>
                        {{ form_end(delete_forms[todoItem.id]) }}
                    </li>
                </ul>
            </div>
        </li>
    {% endfor %}
    </ul>

    <div class="button-cart">
        <ul class="button-cart-back">
        </ul>
        <ul class="button-cart-forward">
            <li>
                <a class="btn btn-primary" href="{{ path('todoitem_new') }}"><i class="glyphicon glyphicon-plus"></i> Add a new item</a>
            </li>
        </ul>
    </div>
{% endblock %}
