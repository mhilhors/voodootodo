{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Add a new todo item{% endtrans %}</h1>

    <div class="new-todo-item-form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="button-cart row">
                <ul class="button-cart-back col-md-6">
                    <li>
                        <a class="btn btn-link" href="{{ path('todoitem_index') }}">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            {% trans %}Back{% endtrans %}
                        </a>
                    </li>
                </ul>

                <ul class="button-cart-forward col-md-6">
                    <li>
                        <button class="btn btn-primary" type="submit">
                            <i class="glyphicon glyphicon-floppy-disk"></i>
                            {% trans %}Save{% endtrans %}
                        </button>
                    </li>
                </ul>
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
